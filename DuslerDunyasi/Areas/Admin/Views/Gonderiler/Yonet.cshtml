@model GonderiViewModel

@{
    var action = ViewContext.RouteData.Values["action"]!.ToString();
    ViewData["Title"] = action == "Yeni" ? "Yeni Gönderi" : "Gönderiyi Düzenler";
}

<form method="post">
    <div class="mb-3">
        <label asp-for="Baslik" class="form-label"></label>
        <input asp-for="Baslik" type="text" class="form-control" placeholder="Başlık">
        <span asp-validation-for="Baslik"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Icerik" class="form-label"></label>
        <textarea asp-for="Icerik" class="form-control"></textarea>
        <span asp-validation-for="Icerik"></span>
    </div>
    <div class="mb-3">
        <label asp-for="KategoriId" class="form-label"></label>
        <select asp-for="KategoriId" class="form-control">
            <option value="">Seçiniz</option>
            <option value="1">Birinci Kategori</option>
            <option value="2">İkinci Kategori</option>
            <option value="3">Üçüncü Kategori</option>
            <option value="4">Dördüncü Kategori</option>
        </select>
        <span asp-validation-for="KategoriId"></span>
    </div>
    <div>
        <button class="btn btn-primary">Kaydet</button>
        <a asp-controller="Gonderiler" asp-action="Index" class="btn btn-danger">İptal</a>
    </div>
</form>